---
name: turbulence_api

templates:
  ctl.erb: bin/ctl
  cert: config/cert
  private_key: config/private_key
  config.json.erb: config/config.json

packages:
- turbulence

provides:
- name: api
  type: turbulence_api
  properties:
  - advertised_host
  - agent_listen_port
  - cert
  - username
  - password

properties:
  listen_address:
    description: "Address to listen on"
    default: "0.0.0.0"
  listen_port:
    description: "Operator API listen port"
    default: 8080
  agent_listen_port:
    description: "Agent API listen port"
    default: 8081

  advertised_host:
    description: "Advertised hostname of the API server"
    default: ""

  username:
    description: "Username for the API authentication"
    default: "turbulence"
  password:
    description: "Password for the API authentication"

  cert:
    type: certificate
    description: "API server certificate"

  director.host:
    description: "Director host"
    example: "192.168.50.4"
  director.port:
    description: "Director port"
    default: 25555
  director.cert.ca:
    description: "CA certificate to verify Director certificate (uses system CA certificates by default)"
    default: ""
  director.client:
    description: "Director client (username in case of basic auth)"
  director.client_secret:
    description: "Director client secret (password in case of basic auth)"

  datadog.app_key:
    description: "Datadog application key used for incident reporting"
    default: ""
  datadog.api_key:
    description: "Datadog API key"
    default: ""

  debug:
    description: "Show debug logs"
    default: true
